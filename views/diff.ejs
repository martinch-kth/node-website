<script>
    var filedata = JSON.parse('<%- JSON.stringify(jstree) %>');

    $('#container').jstree({
        'core' : {

            "themes" : {
                "variant" : "large"
            },
          'multiple' : true,
          'data' : filedata
        },

        "checkbox" : {
            "keep_selected_style" : true
        },
        "plugins" : [ "checkbox" ]
    });

    $('#container2').jstree({
        'core' : {

            "themes" : {
                "variant" : "large"
            },
            'multiple' : true,
            'data' : filedata
        },

        "checkbox" : {
            "keep_selected_style" : true
        },
        "plugins" : [ "checkbox" ]
    });

    $( "#diff_button" ).click(function() {

        // empty first
        $('#diff_container').empty()

        var first_list = $('#container').jstree(true).get_selected();
        var second_list = $('#container2').jstree(true).get_selected();

        console.log(first_list)  // får: Array [ "data/reff1/YYYY-MM-DD_TT-TT-TT_Longname_number10/original-data-structure-errors.json" ]

        var i;
        for (i = 0; i <= first_list.length-1; i++) {

       //     alert("ritar: " + i + "filen:" + first_list[i] )

            console.log(first_list[i])  // får: data/reff1/YYYY-MM-DD_TT-TT-TT_Longname_number10/original-data-structure-errors.json

            $('#diff_container').append('<div id="file'+i+'"></div>')

            makeDiff(first_list[i],second_list[i],"file"+i)
        }
    });

    $( "#diff_button_back" ).click(function() {

        // empty first
        $('#diff_container').empty()

        var first_list = []
        var second_list = []

        var first_list  = $('#container').jstree(true).get_selected();
        var second_list = $('#container2').jstree(true).get_selected();

        var result_first  = first_list[0]
        var result_second = second_list[0]

        console.log(result_first)  // får: Array [ "data/reff1/YYYY-MM-DD_TT-TT-TT_Longname_number10/original-data-structure-errors.json" ]
        console.log(result_second)

        var return_first;

        function callback(response) {
            return_first = response;
            //use return_first variable here

            console.log("filen ska komma tillbaka!!: " +return_first) // git diff filen skickas tillbaka.. men jag borde nog ta html filen istället..!

            const targetElement = document.getElementById("diff_container");

            const configuration = { inputFormat: 'json', drawFileList: true, matching: 'none', highlight: true,  outputFormat: 'side-by-side' };
            const diff2htmlUi = new Diff2HtmlUI(targetElement, return_first, configuration);
            diff2htmlUi.draw();
            diff2htmlUi.highlightCode();

        }

        var rest_parameters = "difffile?firstfolder="+ result_first + "&secondfolder=" + result_second

        console.log(rest_parameters)

        $.ajax({
            type: 'GET',
            url: rest_parameters,
            'success': function(data){
                callback(data);

            },
            error: function(xhr, status, err) {
                console.log(xhr.responseText);
            }
        });

    });


    // lösning kanske...
    // https://stackoverflow.com/questions/46994947/semantic-overriding-my-dropdown-menu-making-it-big

    function makeDiff(firstFile, secondFile, targetId)
    {
        var return_first;
        var return_second;

        function callback(response) {
            return_first = response;
            //use return_first variable here
        }

        function callback_second(response) {
            return_second = response;
            //use return_first AND return_second variable here
            createDiff(JSON.stringify(return_first, null, 1),JSON.stringify(return_second, null, 1),targetId)
        }


        // set URL different...NOT static...get url used right now..
        $.ajax({
            type: 'GET',
            url: firstFile,
            'success': function(data){
                callback(data);

                $.ajax({
                    type: 'GET',
                    url: secondFile,
                    'success': function(data){
                        callback_second(data);
                    },
                    error: function(xhr, status, err) {
                        console.log(xhr.responseText);
                    }
                });
            },
            error: function(xhr, status, err) {
                console.log(xhr.responseText);
            }
        });
    }


    function createDiff(one, other, targetId){

        const targetElement = document.getElementById(targetId);

        // rubrik                kan va vad som helst...

        // TODO.. sätt in riktiga filnamn...bättre...
        var diff = JsDiff.createPatch('fileName', one, other, 'oldHeader', 'newHeader');



        const configuration = { inputFormat: 'json', drawFileList: true, matching: 'none', highlight: true,  outputFormat: 'side-by-side' };
        const diff2htmlUi = new Diff2HtmlUI(targetElement, diff, configuration);
        diff2htmlUi.draw();
        diff2htmlUi.highlightCode();
    }

</script>

